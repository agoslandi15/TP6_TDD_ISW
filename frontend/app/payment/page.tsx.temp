const [returningToSite, setReturningToSite] = useState(false)

  useEffect(() => {
    if (returningToSite) {
      const timer = setTimeout(() => {
        router.push(`/confirmation?ticketId=${ticketId}`)
      }, 2000)
      return () => clearTimeout(timer)
    }
  }, [returningToSite, ticketId, router])